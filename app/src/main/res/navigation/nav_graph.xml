<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.lucassimao.listadetarefas.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_insertNoteFragment"
            app:destination="@id/insertNoteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/insertNoteFragment"
        android:name="com.lucassimao.listadetarefas.ui.fragments.InsertTaskFragment"
        android:label="fragment_insert_note"
        tools:layout="@layout/dialog_fragment_insert_task" />
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="com.lucassimao.listadetarefas.ui.fragments.UpdateNoteFragment"
        android:label="fragment_update_note"
        tools:layout="@layout/fragment_update_note" />

</navigation>