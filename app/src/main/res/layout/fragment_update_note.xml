<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_update_note"
    tools:context=".ui.fragments.UpdateNoteFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_update_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_navigate"
        app:title="@string/update_note" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/default_margin_start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/default_margin_end" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_update_note_title"
        style="@style/DefaultTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/note_title"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/toolbar_update_note">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_update_note_desc"
        style="@style/DefaultTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/note_description"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/til_update_note_title">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_update_note_date"
        style="@style/DefaultTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:hint="@string/note_date"
        app:layout_constraintEnd_toStartOf="@id/til_update_note_hour"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/til_update_note_desc"
        app:startIconDrawable="@drawable/ic_calendar"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_update_note_hour"
        style="@style/DefaultTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="@string/note_hour"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toEndOf="@id/til_update_note_date"
        app:layout_constraintTop_toBottomOf="@id/til_update_note_desc"
        app:startIconDrawable="@drawable/ic_time"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/iv_color_red"
        style="@style/DefaultImageViewSelectedColor"
        android:layout_marginStart="@dimen/default_margin_start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/red_500"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/til_update_note_date"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_pink"
        style="@style/DefaultImageViewSelectedColor"
        android:layout_marginStart="@dimen/default_margin_start"
        android:background="@color/pink_500"
        app:layout_constraintStart_toEndOf="@id/iv_color_red"
        app:layout_constraintTop_toTopOf="@id/iv_color_red"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_deep_purple"
        style="@style/DefaultImageViewSelectedColor"
        android:layout_marginStart="@dimen/default_margin_start"
        android:background="@color/deep_purple_500"
        app:layout_constraintStart_toEndOf="@id/iv_color_pink"
        app:layout_constraintTop_toTopOf="@id/iv_color_pink"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_green"
        style="@style/DefaultImageViewSelectedColor"
        android:layout_marginStart="@dimen/default_margin_start"
        android:background="@color/green_500"
        app:layout_constraintStart_toEndOf="@id/iv_color_deep_purple"
        app:layout_constraintTop_toTopOf="@id/iv_color_deep_purple"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_yellow"
        style="@style/DefaultImageViewSelectedColor"
        android:layout_marginStart="@dimen/default_margin_start"
        android:background="@color/yellow_500"
        app:layout_constraintStart_toEndOf="@id/iv_color_green"
        app:layout_constraintTop_toTopOf="@id/iv_color_green"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_orange"
        style="@style/DefaultImageViewSelectedColor"
        android:layout_marginStart="@dimen/default_margin_start"
        android:background="@color/orange_500"
        app:layout_constraintStart_toEndOf="@id/iv_color_yellow"
        app:layout_constraintTop_toTopOf="@id/iv_color_yellow"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_white"
        style="@style/DefaultImageViewSelectedColor"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/iv_color_red"
        app:layout_constraintTop_toBottomOf="@id/iv_color_red"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update_cancel_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/cancel"
        app:layout_constraintBottom_toTopOf="@id/btn_update_save_note"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update_save_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_start" />

</androidx.constraintlayout.widget.ConstraintLayout>